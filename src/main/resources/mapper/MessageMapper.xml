<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.User.Dao.MessageMapper">
    <insert id="insertMessage" useGeneratedKeys = "true" keyProperty ="message_ID">
        insert into MESSAGE_TABLE (name,passWord,phone,region) VALUES (#{name},#{passWord},#{phone},#{region})
    </insert>
    <select id = "deleteMessage">
        select * from MESSAGE_TABLE where phone = #{phone} and passWord = #{passWord}
    </select>

    <select id = "recalledMessage">
        SELECT  * from MESSAGE_TABLE where userId = #{userId}
    </select>

    <select id = "updateMessageStatus">
        SELECT * FROM  MESSAGE_TABLE where phone = #{phone}
    </select>

    <select id="allListMessages" parameterType="java.lang.String">

    </select>
</mapper>